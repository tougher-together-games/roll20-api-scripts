{
  "source": {
    "include": [
      "src"
    ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "template": "node_modules/better-docs"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "better-docs": {
      "name": "Roll20 API Scripts Documentation",
      "baseUrl": "https://tougher-together-gaming.github.io/roll20-api-scripts/",
      "navigation": [
        "Home",
        "Utilities",
        "Modules",
        "API Reference",
        "Examples"
      ]
    }
  }
}